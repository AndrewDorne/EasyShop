<head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <title>EasyShop</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Load style sheets -->
    <link href="resources/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="resources/css/font-awesome.min.css" rel="stylesheet">

    <!-- Load supplemental Javascript -->
    <script type="text/javascript" src="resources/js/jquery-1.9.0.min.js"></script>
    <script type="text/javascript" src="resources/js/jquery-ui.min.js"></script>
    <script type="text/javascript" src="resources/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="resources/js/index.js"></script>

    <meta charset="utf-8" />
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
    <link rel="stylesheet" href="/resources/demos/style.css" />
    <link rel="stylesheet" href="resources/css/search_results.css" />
</head>
    <% 
		$i = @items.count 
		$numRows = 2
		$numColumns = 1
		$k = 0
	%>
    <% while $k < $numRows and $i > 0  do %>
    <div class="row" style="margin-top:50px">
		<% $j = 0 %>
		<% while $j < $numColumns and $i > 0 do %> 
        <div class="span10 well item-result" style= "border:5px solid #eee;float: none;margin-left: auto;margin-right: auto; height:550px;">
          <h2><%= link_to @items[-($i-@items.count)].name, @items[-($i-@items.count)] %></h2>
          <%= link_to image_tag(@items[-($i-@items.count)].image, :style => 'height:250px ;width:250px;'), @items[-($i-@items.count)] %>
            
          <p style="padding-top: 15px;"><%= truncate(@items[-($i-@items.count)].description, :length => 500, :separator => ' ') %></p>
	<h2 style="padding-top:0px; font-size:4em; float:left;"> $<%= @items[-($i-@items.count)].price %> </h2>
			<div class="btn-group" style="float:right;"><%= link_to "More Information", @items[-($i-@items.count)], :class => 'btn btn-large' %>
					<%= link_to "Add to Cart", @items[-($i-@items.count)] %><button class="btn btn-primary btn-large">Add to Cart</button>
    			</div>
        </div>
		<% $i -= 1 %>
		<% $j += 1 %>
		<% end %>
    </div>
	<% $k += 1 %>
	<% end %>

<br />
