.navbar.navbar-fixed-top
  %nav.navbar-inner
    .container
      %a.btn.btn-navbar{"data-toggle" => "collapse", "data-target" => ".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to "EasyShop", root_path, :class => "brand"
      .nav-collapse
        %ul.nav

          %li.divider-vertical
        = form_tag items_path, :class => "navbar-search pull-left", :method => :get do
          = text_field_tag :search, params[:search], :class => "search-query span3", :placeholder => "Search"
          = submit_tag "Search", :name => nil

        - if user_signed_in? 
          %ul.nav.pull-right

        - else
          %ul.nav.pull-right
            %li=link_to "Sign Up", "/users/sign_up"
            %li.divider-vertical
            %li.dropdown
              %a.dropdown-toggle{:href=>"#", "data-toggle"=>"dropdown"}
                Sign In
                %b.caret
              %ul.dropdown-menu{:style=>"padding:15px; padding-bottom:0px"}
                = simple_form_for resource, :as => resource_name,
                    :url => "/users/sign_in", :style=>"padding-bottom:10px" do |f|
                  = f.input_field :email, :label => false, :placeholder => "Email"
                  = f.input_field :password, :label => false, :placeholder => "Password"
                  = f.input :remember_me, :as => "boolean", :class => "checkbox",
                      :inline_label => "Remember me", :label => false
                  = f.button :submit, :class => 'btn btn-primary', :value => "Sign In", :style=>"width:100%"
